<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    @*https://holidaycss.js.org*@
    <link rel="stylesheet" href=" https://cdn.jsdelivr.net/npm/holiday.css@0.9.8" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebApp.styles.css" asp-append-version="true" />
    <!--
    RenderSection is a way of allowing statements/code/tags to be placed in a 
    certain area of the layout
    By default this is a required entry on eact Content page.  Using required: false
    makse this an optional entry on any Content page.
    If the sections is used on a Content page, then the code within the seciton
    reference on the Content page is merged in place hereon the layout page
    -->
    @RenderSection("CustomCSS",required:false)
</head>
<body>
    <header>
        <nav>

            <a asp-area="" asp-page="/Index">WebApp</a>

            <ul>
                <li>
                    <a asp-area="" asp-page="/Index">
                        <img src="~/img/ChinookMusicMenuLogo.jpg"
                             alt="Chinook Logo"
                             title="Go to Home" />
                    </a>
                </li>
                <li>
                    <a asp-area="" asp-page="/Index">Home</a>
                </li>
                @*
                Setup a submenu (drop-down menu) using holiday.css
                see holidaycss.js.org

                Start with an li tag
                Add a span tag: entry on menu root
                Add a ul tag: starts the drop down menu
                Add any number of li and a tags: sub menu item entry
                *@
                <li>
                    <span>Samples</span>
                    <ul style="margin:0">
                        <li>
                            <a asp-area="" asp-page="/SamplePages/Basics">Basics</a>
                        </li>
                        <li>
                            <a asp-area="" asp-page="/SamplePages/Controls">Controls</a>
                        </li>
                    </ul>
                </li>
                <li>
                    <a asp-area="" asp-page="/Privacy">Privacy</a>
                </li>
                <partial name="_LoginPartial" />
            </ul>

        </nav>
    </header>
    <div>
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer>
        <div>
            &copy; 2022 - WebApp - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>